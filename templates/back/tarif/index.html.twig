{% extends 'back/base.html.twig' %}

{% block body %}
    <h2>Liste des Tarifs</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tarif in tarifs %}
            <tr>
                <th scope="row">{{ tarif.id }}</th>
                <td>{{ tarif.name }}</td>
                <td>
                    <a href="{{ path('app_back_tarif_show', {'id': tarif.id}) }}" class="btn">Voir</a>
                    <a href="{{ path('app_back_tarif_edit', {'id': tarif.id}) }}" class="btn">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Ressource non trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_tarif_new') }}" class="btn">Nouveau</a>
{% endblock %}
